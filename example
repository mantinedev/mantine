  const [opened, { open, close }] = useDisclosure(false);

  return (
    <>
      <Modal opened={opened} onClose={close} title="Mantine Modal Example">
        Modal content goes here ðŸš€
      </Modal>

      <Button onClick={open}>Open Modal</Button>
    </>
  );
}
