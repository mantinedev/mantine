{
  "name": "@mantine/hooks",
  "version": "8.1.3",
  "description": "A collection of 50+ hooks for state and UI management",
  "homepage": "https://mantine.dev",
  "license": "MIT",
  "author": "Vitaly Rtishchev <rtivital@gmail.com>",
  "keywords": [
    "frontend",
    "hooks",
    "library",
    "next",
