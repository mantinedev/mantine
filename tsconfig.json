{
  "extends": "./tsconfig.base.json",
  "include": [
    "src/mantine-*/src",
    "src/mantine-*/demos",
    "./types",
    "./docs/src",
    "./gallery/src",
    "./scripts",
    "./configuration",
    "./configuration/types",
    "./tests"
  ],
  "exclude": ["public", ".cache", "configuration/jest", "configuration/storybook/main.js"],
  "compilerOptions": {
    "paths": {
      "@mantine/*": ["src/mantine-*/src"],
      "@demos/*": ["src/mantine-*/src/demos"]
    }
  }
}
