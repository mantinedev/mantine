{
  "extends": "../../tsconfig.base.json",
  "include": ["./src", "./types", "../../configuration/types"],
  "exclude": ["./lib", "./esm", "./cjs"],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "composite": true,
    "paths": {
      "@mantine/core": ["../mantine-core/src"],
      "@mantine/dates": ["../mantine-dates/src"],
      "@mantine/hooks": ["../mantine-hooks/src"],
      "@mantine/prism": ["../mantine-prism/src"],
      "@mantine/dropzone": ["../mantine-dropzone/src"],
      "@mantine/spotlight": ["../mantine-spotlight/src"],
      "@mantine/notifications": ["../mantine-notifications/src"],
      "@mantine/modals": ["../mantine-modals/src"],
      "@mantine/carousel": ["../mantine-carousel/src"],
      "@mantine/tiptap": ["../mantine-tiptap/src"],
      "@mantine/storybook": ["../mantine-storybook/src"]
    }
  },
  "references": [
    { "path": "../mantine-core" },
    { "path": "../mantine-dates" },
    { "path": "../mantine-hooks" },
    { "path": "../mantine-prism" },
    { "path": "../mantine-dropzone" },
    { "path": "../mantine-notifications" },
    { "path": "../mantine-modals" },
    { "path": "../mantine-carousel" },
    { "path": "../mantine-spotlight" },
    { "path": "../mantine-tiptap" },
    { "path": "../mantine-storybook" }
  ]
}
