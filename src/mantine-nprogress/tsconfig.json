{
  "extends": "../../tsconfig.base.json",
  "include": ["./src", "./types", "../../configuration/types"],
  "exclude": ["./lib", "./esm", "./cjs"],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "declarationDir": "lib",
    "paths": {
      "@mantine/core": ["../mantine-core/src"],
      "@mantine/hooks": ["../mantine-hooks/src"],
      "@mantine/tests": ["../mantine-tests/src"]
    }
  },
  "references": [
    { "path": "../mantine-core" },
    { "path": "../mantine-hooks" },
    { "path": "../mantine-tests" }
  ]
}
